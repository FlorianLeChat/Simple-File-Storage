# NextJS parameters
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_TIMEZONE=Europe/Paris
NEXT_PUBLIC_MAX_QUOTA=104857600 # 1024 * 1024 * 100 = 100MB (bytes)
NEXT_PUBLIC_MAX_AVATAR_SIZE=5242880 # 1024 * 1024 * 5 = 5MB (bytes)
NEXT_PUBLIC_ACCEPTED_FILE_TYPES=image/*, video/*, audio/* # https://developer.mozilla.org/en-US/docs/Web/HTML/Attributes/accept
NEXT_PUBLIC_ACCEPTED_AVATAR_TYPES=image/jpeg, image/jpg, image/png, image/webp

# Sentry parameters
SENTRY_ENABLED=false
SENTRY_DSN=https://url.to.sentry.io/1234567890
SENTRY_ORG=org
SENTRY_PROJECT=project
SENTRY_AUTH_TOKEN=token

# Google Analytics and reCAPTCHA keys
NEXT_PUBLIC_RECAPTCHA_ENABLED=false
NEXT_PUBLIC_RECAPTCHA_PUBLIC_KEY=6Lxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ANALYTICS_TAG=G-XXXXXXXXXX

RECAPTCHA_SECRET_KEY=6Lxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database credentials
DATABASE_URL="mysql://username:password@127.0.0.1:3306/simple_file_storage"

# SMTP and DKIM credentials
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=username
SMTP_PASSWORD=password

DKIM_DOMAIN=example.com
DKIM_SELECTOR=selector
DKIM_PRIVATE_KEY=file:///path/to/private-key.key

# Authentication parameters
AUTH_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google OAuth credentials
AUTH_GOOGLE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AUTH_GOOGLE_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub OAuth credentials
AUTH_GITHUB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AUTH_GITHUB_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx